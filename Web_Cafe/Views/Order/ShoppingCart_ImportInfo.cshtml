@model Web_Cafe.Areas.Admin.Models.DTO.OrderDTO

@{
    ViewBag.Title = "Thông tin đơn hàng";
}

<div class="sec sec__shopcart">
    <div class="container">
        <div class="nav-steps">
            <a href="~/Order/Index">
                <div class="nav-step__item active">
                    <span class="number">1</span>
                    <span class="txt">Giỏ hàng</span>
                </div>
            </a>
            <div class="nav-step__item waiting">
                <span class="number">2</span>
                <span class="txt">Nhập thông tin</span>
            </div>
            <div class="nav-step__item">
                <span class="number">3</span>
                <span class="txt">Xác nhận thông tin</span>
            </div>
            <div class="nav-step__item">
                <span class="number">4</span>
                <span class="txt">Hoàn thành</span>
            </div>
        </div>
        @using (Html.BeginForm("ShoppingCart_ImportInfo", "Order", FormMethod.Post))
        {
            <div class="row">
                <div class="sec__shopcart__info col-md-12 col-sm-12 col-xs-12">
                    <div class="box-user__info panel">
                        <div class="title">Thông tin thanh toán và nhận hàng</div>
                        <div class="content">
                            <div class="form-group">
                                <div class="label">
                                    Họ và tên
                                    <i class="fa fa-asterisk"></i>
                                </div>
                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", required = true } })
                                @*<input type="text" name="fullName" class="form-control" placeholder="Họ và tên" required>*@
                            </div>
                            <div class="form-group">
                                <div class="label">
                                    Số điện thoại
                                    <i class="fa fa-asterisk"></i>
                                </div>
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @maxlength = "10", required = true } })
                                @*<input type="text" name="phone" maxlength="10" class="form-control" placeholder="SĐT" required>*@
                            </div>
                            <div class="form-group">
                                <div class="label">Email</div>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @*<input type="text" name="email" class="form-control" placeholder="Email">*@
                            </div>
                            <div class="form-group">
                                <div class="label">
                                    Địa chỉ
                                    <i class="fa fa-asterisk"></i>
                                </div>
                                @Html.EditorFor(model => model.DeliveryAddress, new { htmlAttributes = new { @class = "form-control", required = true } })
                                @*<input type="text" name="deliveryAddress" class="form-control" placeholder="Địa chỉ" required>*@
                            </div>
                            <div class="form-group">
                                <div class="label">Ghi chú:</div>
                                @Html.TextAreaFor(model => model.OrderDescription, new { @class = "form-control" })
                                @*<textarea name="" cols="30" rows="10" class="form-control" placeholder="Nội dung"></textarea>*@
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                            <a href="~/Order/Index" class="btn btn__back" >Quay lại</a>
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            <button class="btn btn__next" type="submit">Tiếp tục thanh toán</button>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

</div>

