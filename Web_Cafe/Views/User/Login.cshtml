@model Web_Cafe.Models.Entities.User

@{
    ViewBag.Title = "Đăng nhập";
}

<div class="">
    <div class="modal-title" style="font-size: 32px; text-align: center"><strong>Đăng nhập</strong></div>
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "" }))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 account__input" style="margin-top: 15px">
                    @Html.ValidationSummary(true, null, new { @class = "form-group alert alert-danger" })
                    <div class="form-group">
                        <div class="label">Tên đăng nhập</div>
                        @Html.TextBoxFor(model => model.Username, new { @class = "input100", @type = "text" })
                    </div>
                    <div class="form-group">
                        <div class="label">Mật khẩu</div>
                        @Html.TextBoxFor(model => model.Password, new { @class = "input100", @type = "password" })
                    </div>
                    <div class="remember-login form-group">
                        <div class="check__action -radio">
                            <input type="checkbox" class="checkbox">
                            <span class="icon"></span>
                            Ghi nhớ tài khoản
                        </div>
                    </div>
                    <div class="form-group login__action">
                        <button type="submit" class="btn btn-submit" style="font-size: 18px">Đăng nhập</button>
                    </div>
                    <div class="login__note" style="text-align: center; margin: 15px 0; font-size: 13px">
                        Bạn chưa có tài khoản?
                        <a href="/User/Register" style="font-size: 14px"><strong>Đăng ký ngay</strong></a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>



